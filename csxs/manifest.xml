            <UI>
                <Type>Panel</Type>
                <Geometry>
                    <Size>
                        <Height>455</Height>
                        <Width>600</Width>
                    </Size>
                    <MaxSize>
                        <Height>1600</Height>
                        <Width>1400</Width>
                    </MaxSize>
                    <MinSize>
                        <Height>60</Height>
                        <Width>50</Width>
                    </MinSize>
                </Geometry>
                <Menu>Motion Factory</Menu>
            </UI>
