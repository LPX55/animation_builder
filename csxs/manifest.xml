    <ExtensionList>
        <Extension Id="com.pixflow.motionfactory" Version="3.0.0" />
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <Host Name="PPRO" Version="[11.0,99.9]" />
            <Host Name="AEFT" Version="[13.0,99.0]" />
            <Host Version="[0.0,99.9]" Name="PHXS"/>
            <Host Version="[0.0,99.9]" Name="PHSP"/>   
            <Host Version="[0.0,99.9]" Name="ILST"/>       
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
